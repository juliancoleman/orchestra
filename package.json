{
  "name": "@juliancoleman/orchestra",
  "version": "0.0.1",
  "description": "A dependency-free, Typescipt-first, pure-function String manipulation library",
  "main": "index.js",
  "repository": "git@github.com:juliancoleman/orchestra",
  "author": "Julian Coleman <jcoleman.engineering@gmail.com>",
  "license": "MIT",
  "pre-commit": [
    "verify",
    "lint",
    "test:base"
  ],
  "scripts": {
    "build": "tsc -p tsconfig.build.js",
    "coverage": "yarn run test:base --coverage",
    "coverage:serve": "yarn run coverage && yarn run serve:lcov",
    "lint": "tslint -p tsconfig.json",
    "generate-barrels": "barrelsby -c barrelsby.json",
    "serve:lcov": "serve -s coverage/lcov-report",
    "test": "yarn run test:base --watch",
    "test:base": "jest --config ./jest.config.js -i",
    "test:ci": "CI=true yarn run coverage && cat ./coverage/lcov.info | codecov",
    "verify": "tsc"
  },
  "devDependencies": {
    "@types/jest": "^23.1.4",
    "@types/node": "^10.5.2",
    "barrelsby": "^1.0.2",
    "codecov": "^3.0.3",
    "jest": "^23.3.0",
    "jest-spec-reporter": "^1.0.3",
    "pre-commit": "^1.2.2",
    "serve": "^9.2.0",
    "ts-jest": "^22.4.6",
    "tslint": "^5.10.0",
    "tslint-config-airbnb": "^5.9.2",
    "typescript": "^2.9.2"
  }
}
